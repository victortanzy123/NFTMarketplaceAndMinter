{
  "name": "hardhat-template",
  "main": "hardhat.config.ts",
  "files": [
    "contracts/"
  ],
  "scripts": {
    "test": "yarn hardhat test",
    "run": "npx hardhat run",
    "coverage": "yarn hardhat coverage --testfiles ",
    "test-no-compile": "TS_NODE_TRANSPILE_ONLY=1 yarn hardhat test --no-compile",
    "test:artzone-creator-v2": "npx hardhat test ./test/ArtzoneCreator/artzone-creator-test.ts",
    "deploy:bsc-testnet": "npx hardhat run --network bscTestnet deploy/main.ts",
    "deploy:sepolia": "npx hardhat run --network sepolia deploy/main.ts",
    "deploy:scroll-test": "npx hardhat run --network scroll deploy/test-deploy.ts",
    "deploy:scrollTestnet": "npx hardhat run --network scrollTestnet deploy/main.ts",
    "deploy:goerli": "npx hardhat run --network goerli deploy/main.ts",
    "deploy:polygon": "npx hardhat run --network polygon deploy/main.ts",
    "deploy:polygonMumbai": "npx hardhat run --network polygonMumbai deploy/main.ts",
    "run:script-mumbai": "npx hardhat run scripts/artzone-creator-script.ts --network polygonMumbai",
    "first-compile": "TS_NODE_TRANSPILE_ONLY=1 yarn hardhat typechain",
    "compile": "yarn hardhat compile",
    "fcompile": "yarn hardhat clean && yarn hardhat compile",
    "lint:check": "prettier --check '(contracts|interfaces|src|test|deployments)/**/*.(sol|json|ts)'",
    "lint:write": "prettier -w '(contracts|interfaces|src|test|deployments)/**/*.(sol|json|ts)'",
    "size": "yarn run hardhat size-contracts"
  },
  "author": "",
  "license": "AGPL-3.0",
  "dependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.19.0",
    "@uniswap/v3-periphery": "^1.0.1",
    "@uniswap/v3-sdk": "^3.9.0",
    "hardhat": "^2.9.6",
    "node-fetch": "^3.2.4",
    "solady": "^0.0.168"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "^4.5.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.4.13",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.8",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.8.0",
    "typechain": "^8.0.0",
    "typescript": "^4.7.2"
  },
  "packageManager": "yarn@3.2.1"
}
